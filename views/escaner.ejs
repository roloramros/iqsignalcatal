      margin: 15px;
      flex-wrap: wrap;
    }

    @media (max-width: 768px) {
      .config-container {
        margin: 10px;
        gap: 10px;
      }
    }

    .config-box {
      flex: 1 1 calc(33.333% - 10px);
      /* 3 columnas iguales */
      min-width: 280px;
      background-color: #f8f9fa;
      border-radius: 8px;
      padding: 15px;
      border: 1px solid #dee2e6;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }

    @media (max-width: 768px) {
      .config-box {
        flex: 1 1 100%;
        padding: 12px;
      }
    }

    .config-header {
      display: flex;
      align-items: center;
      margin-bottom: 12px;
      padding-bottom: 8px;
      border-bottom: 1px solid #dee2e6;
    }

    .config-icon {
      width: 24px;
      height: 24px;
      margin-right: 10px;
      background-color: #0d6efd;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: bold;
      font-size: 14px;
      flex-shrink: 0;
    }

    .config-title {
      font-weight: 600;
      color: #0d6efd;
      margin: 0;
      font-size: 16px;
    }

    @media (max-width: 480px) {
      .config-title {
        font-size: 14px;
      }
    }

    .config-content {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .config-row {
      display: flex;
      gap: 10px;
      align-items: center;
      flex-wrap: wrap;
    }

    @media (max-width: 480px) {
      .config-row {
        flex-direction: column;
        align-items: stretch;
        gap: 5px;
      }

      .config-row label.config-label {
        min-width: unset !important;
      }
    }

    .config-label {
      min-width: 140px;
      font-weight: 500;
      font-size: 14px;
    }

    @media (max-width: 768px) {
      .config-label {
        font-size: 13px;
      }
    }

    .config-input {
      flex: 1;
    }

    .form-control-sm {
      font-size: 13px;
    }

    /* Checkbox personalizado */
    .form-check-input:checked {
      background-color: #0d6efd;
      border-color: #0d6efd;
    }

    /* Estad√≠sticas responsive */
    .stats-container {
      display: flex;
      gap: 15px;
      margin: 15px;
      flex-wrap: wrap;
    }

    @media (max-width: 992px) {
      .stats-container {
        flex-direction: column;
        margin: 10px;
      }
    }

    .stats-box {
      flex: 1;
      background-color: #f8f9fa;
      border-radius: 8px;
      padding: 15px;
      border: 1px solid #dee2e6;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
      max-height: 400px;
      overflow-y: auto;
      min-width: 0;
    }

    @media (max-width: 768px) {
      .stats-box {
        max-height: 350px;
        padding: 12px;
      }
    }

    .stats-header {
      display: flex;
      align-items: center;
      margin-bottom: 12px;
      padding-bottom: 8px;
      border-bottom: 1px solid #dee2e6;
    }

    .stats-icon {
      width: 24px;
      height: 24px;
      margin-right: 10px;
      background-color: #6c757d;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: bold;
      font-size: 14px;
      flex-shrink: 0;
    }

    .stats-title {
      font-weight: 600;
      color: #6c757d;
      margin: 0;
      font-size: 16px;
    }

    @media (max-width: 480px) {
      .stats-title {
        font-size: 14px;
      }
    }

    .stats-content {
      font-family: monospace;
      font-size: 13px;
      line-height: 1.5;
    }

    @media (max-width: 480px) {
      .stats-content {
        font-size: 11px;
      }
    }

    .stats-section {
      margin-bottom: 15px;
    }

    .stats-section-title {
      font-weight: bold;
      margin-bottom: 5px;
      color: #495057;
      word-break: break-word;
    }

    .stats-item {
      margin-left: 15px;
      margin-bottom: 3px;
      word-break: break-word;
    }

    @media (max-width: 480px) {
      .stats-item {
        margin-left: 10px;
      }
    }

    .stats-section-dist {
      display: flex;
      align-items: center;
      gap: 20px;
      flex-wrap: wrap;
    }

    @media (max-width: 480px) {
      .stats-section-dist {
        gap: 10px;
      }
    }

    .stats-section-title-dist {
      font-weight: bold;
      white-space: nowrap;
    }

    .stats-item-dist {
      font-size: 14px;
      white-space: nowrap;
    }

    @media (max-width: 480px) {
      .stats-item-dist {
        font-size: 12px;
      }
    }

    .stats-highlight {
      color: #0d6efd;
      font-weight: bold;
    }

    /* Patrones responsive */
    .patrones-container {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .patron-item {
      background-color: #f8f9fa;
      border-radius: 6px;
      padding: 12px;
      border: 1px solid #dee2e6;
      font-family: monospace;
      font-size: 13px;
    }

    @media (max-width: 480px) {
      .patron-item {
        padding: 10px;
        font-size: 11px;
      }
    }

    .patron-header {
      font-weight: bold;
      margin-bottom: 8px;
      color: #0d6efd;
      border-bottom: 1px dashed #ccc;
      padding-bottom: 5px;
      word-break: break-all;
      cursor: pointer;
    }

    .patron-detail {
      margin-bottom: 4px;
      display: flex;
      flex-wrap: wrap;
    }

    .patron-label {
      min-width: 90px;
      font-weight: 500;
    }

    @media (max-width: 480px) {
      .patron-label {
        min-width: 75px;
        font-size: 10px;
      }
    }

    .patron-value {
      flex: 1;
      word-break: break-word;
    }

    .confianza-alta {
      color: #198754;
      font-weight: bold;
    }

    .confianza-media {
      color: #fd7e14;
      font-weight: bold;
    }

    .confianza-baja {
      color: #dc3545;
      font-weight: bold;
    }

    .empty-state {
      text-align: center;
      color: #6c757d;
      font-style: italic;
      padding: 20px;
    }

    /* Popup container responsive */
    #popup-container {
      position: fixed;
      top: 70px;
      right: 10px;
      z-index: 9999;
      display: flex;
      flex-direction: column;
      gap: 10px;
      max-width: calc(100vw - 20px);
    }

    @media (max-width: 480px) {
      #popup-container {
        left: 10px;
        right: 10px;
      }
    }

    .popup-alert {
      background: #222;
      color: #fff;
      padding: 15px 20px;
      border-radius: 8px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
      min-width: 250px;
      max-width: 300px;
      position: relative;
      animation: slideIn 0.3s ease-out;
    }

    @media (max-width: 480px) {
      .popup-alert {
        min-width: unset;
        width: 100%;
        max-width: none;
        padding: 12px 15px;
      }
    }

    .popup-texto {
      font-size: 14px;
      text-align: left;
    }

    @media (max-width: 480px) {
      .popup-texto {
        font-size: 12px;
      }
    }

    @keyframes slideIn {
      from {
        transform: translateX(100%);
        opacity: 0;
      }

      to {
        transform: translateX(0);
        opacity: 1;
      }
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: scale(0.9);
      }

      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    /* Ajustes adicionales para m√≥vil */
    .main-container {
      display: flex;
      flex: 1;
    }

    #indicador-carga {
      padding: 10px;
    }

    @media (max-width: 576px) {
      #indicador-carga strong {
        font-size: 14px;
      }
    }

    .left-panel {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
      width: 75%;
      overflow-y: auto;
    }

    .right-panel {
      width: 25%;
    }

    .patron {
      width: 100%;
    }

    .patron h3 {
      margin: 5px 0;
      text-align: left;
      font-size: 17px;
      font-weight: bold;
    }

    .cuadros {
      display: grid;
      grid-template-columns: repeat(9, 35px);
      gap: 3px;
    }

    .cuadro {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 35px;
      height: 25px;
      border: 2px solid black;
      background-color: white;
      font-weight: bold;
      color: white;
    }

    .popup-content {
      position: relative;
    }

    .cerrar-popup {
      position: absolute;
      top: 5px;
      right: 8px;
      background: transparent;
      color: #fff;
      border: none;
      font-size: 18px;
      cursor: pointer;
    }

    #popup-texto {
      font-size: 18px;
      text-align: center;
      padding-top: 10px;
    }
  </style>
</head>

