    function analizarPatronesN(velas, nContexto, minSoporte, minConfianza) {
      if (velas.length < nContexto + 1) {
        console.error(`ERROR: Necesito al menos ${nContexto + 1} velas`);
        return { resultados: [], estadisticas: {} };
      }

      // Extraer colores
      const colores = velas.map(v => normalizeColor(v.candle_color));

      // Estad√≠sticas b√°sicas
      estadisticas = {
        totalVelas: colores.length,
        distribucionColores: { R: 0, G: 0 },
        transiciones: { 'G‚ÜíG': 0, 'R‚ÜíR': 0, 'G‚ÜíR': 0, 'R‚ÜíG': 0 },
        patronesUnicos: 0,
        filtradosSoporte: 0,
        filtradosConfianza: 0,
        patronesFinales: 0,
        patronesPosibles: colores.length - nContexto
      };

      // Contar distribuci√≥n de colores
      for (const color of colores) {
        if (color === 'R') estadisticas.distribucionColores.R++;
        if (color === 'G') estadisticas.distribucionColores.G++;
      }

      // Contar transiciones simples
      for (let i = 0; i < colores.length - 1; i++) {
        const transicion = colores[i] + '‚Üí' + colores[i + 1];
        if (estadisticas.transiciones[transicion] !== undefined) {
          estadisticas.transiciones[transicion]++;
        }
      }

      const patrones = {};
      const ocurrenciasPatron = {};

      for (let i = 0; i <= colores.length - (nContexto + 1); i++) {
        const contexto = colores.slice(i, i + nContexto).join('');
        const siguienteColor = colores[i + nContexto];

        if (!patrones[contexto]) patrones[contexto] = { R: 0, G: 0 };
        patrones[contexto][siguienteColor]++;

        if (!ocurrenciasPatron[contexto]) ocurrenciasPatron[contexto] = [];
        ocurrenciasPatron[contexto].push({
          indice: i,
          horaInicio: velas[i].start_time,
          horaFin: velas[i + nContexto].end_time,
          secuenciaContexto: colores.slice(i, i + nContexto),
          siguienteColor: siguienteColor,
          secuenciaCompleta: colores.slice(i, i + nContexto + 1),
          idsVelas: velas.slice(i, i + nContexto + 1).map(v => v.id)
        });
      }

      estadisticas.patronesUnicos = Object.keys(patrones).length;
      for (const [contexto, conteos] of Object.entries(patrones)) {
        const soporteTotal = conteos.R + conteos.G;
        if (soporteTotal >= minSoporte) {
          let colorPredicho = conteos.R >= conteos.G ? 'R' : 'G';
          let conteoPrediccion = Math.max(conteos.R, conteos.G);
          const confianza = conteoPrediccion / soporteTotal;
          if (confianza >= minConfianza) {
            resultados.push({
              patron: contexto,
              soporte: soporteTotal,
              colorPredicho,
              conteoPrediccion,
              confianza,
              distribucion: { ...conteos },
              ocurrencias: ocurrenciasPatron[contexto] || []
            });
          } else {
            estadisticas.filtradosConfianza++;
          }
        } else {
          estadisticas.filtradosSoporte++;
        }
      }
      // Ordenar por confianza y soporte
      resultados.sort((a, b) => {
        if (b.confianza !== a.confianza) return b.confianza - a.confianza;
        return b.soporte - a.soporte;
      });
      estadisticas.patronesFinales = resultados.length;
      return { resultados, estadisticas };
    }

