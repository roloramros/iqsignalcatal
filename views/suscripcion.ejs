      color: #091013;
      box-shadow: 0 8px 28px rgba(23, 201, 100, .25), 0 8px 28px rgba(255, 59, 59, .2)
    }

    .btn-primary:hover {
      transform: translateY(-2px)
    }

    .btn-outline {
