      --card: #17191f;
      /* tarjetas */
      --muted: #9ba3af;
      /* texto secundario */
      --text: #e9eef5;
      /* texto principal */
      --green: #17c964;
      /* verde principal */
      --green-700: #0ea958;
      --red: #ff3b3b;
      /* rojo principal */
      --red-700: #e22f2f;
      --ring: rgba(255, 255, 255, .08);
      /* bordes suaves */
      --accent: linear-gradient(135deg, rgba(23, 201, 100, .15), rgba(255, 59, 59, .15));
    }

    * {
      box-sizing: border-box
    }

    html,
    body {
      height: 100%
    }

    body {
      margin: 0;
      background: radial-gradient(1200px 800px at 15% 0%, rgba(23, 201, 100, .08), transparent 60%),
        radial-gradient(1200px 800px at 85% 10%, rgba(255, 59, 59, .08), transparent 60%),
        var(--bg);
      color: var(--text);
      font: 16px/1.45 system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
      display: flex;
      flex-direction: column;
    }

    /* Header */
    .wrap {
      width: min(1200px, 92vw);
      margin: 0 auto;
    }

    header {
      position: sticky;
      top: 0;
      z-index: 10;
      backdrop-filter: blur(10px);
      background: linear-gradient(to bottom, rgba(14, 15, 18, .85), rgba(14, 15, 18, .55));
      border-bottom: 1px solid var(--ring);
    }

    .topbar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 16px;
      padding: 14px 0;
    }

    .brand {
      display: flex;
      align-items: center;
      gap: 10px;
      font-weight: 700;
      letter-spacing: .3px
    }

    .logo {
      width: 34px;
      height: 34px;
      border-radius: 9px;
      display: grid;
      place-items: center;
      color: white;
      background: linear-gradient(135deg, var(--green), var(--red));
      box-shadow: 0 10px 30px rgba(23, 201, 100, .25), 0 10px 30px rgba(255, 59, 59, .15);
      font-weight: 900;
    }

    .usdt-badge {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 6px 10px;
      border: 1px dashed rgba(255, 255, 255, .16);
      border-radius: 999px;
      color: var(--muted)
    }

    .pill {
      font-weight: 600;
      color: #dfe8f5
    }

    .usdt-dot {
      width: 8px;
      height: 8px;
      border-radius: 999px;
      background: var(--green)
    }

    /* Hero */
    .hero {
      padding: 38px 0 20px
    }

    .title {
      font-size: clamp(24px, 2.8vw, 36px);
      margin: 0 0 8px
    }

    .subtitle {
      color: var(--muted);
      margin: 0
    }

    /* Toggle (visual) */
    .toggle {
      margin: 22px 0 0;
      display: flex;
      align-items: center;
      gap: 12px
    }

    .switch {
      position: relative;
      width: 64px;
      height: 34px
    }

    .switch input {
      appearance: none;
      width: 100%;
      height: 100%;
      margin: 0
    }

    .slider {
      position: absolute;
      inset: 0;
      background: #101216;
      border: 1px solid var(--ring);
      border-radius: 999px;
      transition: .25s
    }

    .slider::after {
      content: "";
      position: absolute;
      top: 50%;
      left: 6px;
      translate: 0 -50%;
      width: 22px;
      height: 22px;
      border-radius: 999px;
      background: linear-gradient(135deg, var(--green), var(--red));
      box-shadow: 0 8px 18px rgba(23, 201, 100, .25);
      transition: .25s
    }

    .switch input:checked+.slider {
      background: #12151b
    }

    .switch input:checked+.slider::after {
      left: 36px;
      box-shadow: 0 8px 18px rgba(255, 59, 59, .25)
    }

    .toggle small {
      color: var(--muted)
    }

    /* Grid pricing */
    .grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 18px;
      margin: 26px 0 18px
    }

    @media (max-width:960px) {
      .grid {
        grid-template-columns: 1fr;
      }
    }

    .card {
      position: relative;
      border: 1px solid var(--ring);
      background: linear-gradient(180deg, rgba(255, 255, 255, .02), transparent 40%), var(--card);
      border-radius: 16px;
      overflow: hidden;
      padding: 22px;
      display: flex;
      flex-direction: column;
      gap: 16px;
      isolation: isolate;
      transition: transform .2s ease, box-shadow .2s ease, border-color .2s ease;
    }

    .card::before {
      content: "";
      position: absolute;
      inset: auto -40% 0 -40%;
      height: 60%;
      background: var(--accent);
      filter: blur(20px);
      opacity: .25;
      pointer-events: none;
    }

    .card:hover {
      transform: translateY(-3px);
      box-shadow: 0 16px 40px rgba(0, 0, 0, .35);
      border-color: rgba(255, 255, 255, .18)
    }

    .tag {
      display: inline-flex;
      gap: 8px;
      align-items: center;
      font-size: 12px;
      letter-spacing: .3px;
      padding: 6px 10px;
      border-radius: 999px;
      border: 1px solid var(--ring);
      color: var(--muted)
    }

    .tag .dot {
      width: 8px;
      height: 8px;
      border-radius: 50%
    }

    .dot.green {
      background: var(--green)
    }

    .dot.red {
      background: var(--red)
    }

    .plan {
      display: flex;
      align-items: baseline;
      gap: 10px
    }

    .plan h3 {
      margin: 0;
      font-size: clamp(18px, 2.2vw, 24px)
    }

    .price {
      font-size: clamp(26px, 3.2vw, 40px);
      font-weight: 800;
      letter-spacing: .3px
    }

    .per {
      color: var(--muted)
    }

    .features {
      display: grid;
      gap: 10px;
      margin: 6px 0
    }

    .fi {
      display: flex;
      gap: 10px;
      align-items: flex-start;
      color: #e7f6ee
    }

    .fi.muted {
      color: #f6e8e8
    }

    .fi svg {
      flex: 0 0 18px
    }

    .cta {
