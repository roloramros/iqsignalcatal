‚ùå  Perdido: ${resumen["‚ùå"]}
‚ö†Ô∏è  Condici√≥n no cumplida: ${resumen["‚ö†Ô∏è"]}`;

        alert(mensajeResumen);
        cargarAlertas();

      } catch (error) {
        console.error("‚ùå Error al generar resultados:", error.message);
        alert("‚ùå Error al generar resultados: " + error.message);
